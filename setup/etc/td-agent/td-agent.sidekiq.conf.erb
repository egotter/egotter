<source>
  @type tail
  path /var/log/messages
  pos_file /tmp/messages.log.pos
  tag <%= name %>.syslog
  format /^(?<message>.*)$/
</source>

<match <%= name %>.*>
  @type rewrite_tag_filter
  <rule>
    key message
    pattern ( WARN:? | ERROR:? | Killed process |\[error\])
    tag ${tag}.$1
  </rule>
</match>

<match <%= name %>.rails.*>
  @type slack
  token <%= slack_td_agent_token %>
  channel rails_sidekiq
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.sidekiq.*>
  @type slack
  token <%= slack_td_agent_token %>
  channel sidekiq
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.sidekiq_misc.*>
  @type slack
  token <%= slack_td_agent_token %>
  channel sidekiq_misc
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.syslog.*>
  @type slack
  token <%= slack_td_agent_token %>
  channel syslog
  username <%= name %>
  flush_interval 2s
</match>
