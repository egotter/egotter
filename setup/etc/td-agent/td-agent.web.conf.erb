<source>
  @type tail
  path /var/egotter/log/production.log
  pos_file /tmp/production.log.pos
  tag <%= name %>.rails
  format /^(?<message>.*)$/
</source>

<source>
  @type tail
  path /var/egotter/log/puma.log
  pos_file /tmp/puma.log.pos
  tag <%= name %>.puma
  format /^(?<message>.*)$/
</source>

<source>
  @type tail
  path /var/log/messages
  pos_file /tmp/messages.log.pos
  tag <%= name %>.syslog
  format /^(?<message>.*)$/
</source>

<source>
  @type tail
  path /var/log/nginx/error.log
  pos_file /tmp/error.log.pos
  tag <%= name %>.error_log
  format /^(?<message>.*)$/
</source>

<match <%= name %>.*>
  @type rewrite_tag_filter
  <rule>
    key message
    pattern (WARN|ERROR|Killed|\[error\])
    tag ${tag}.$1
  </rule>
</match>

<match <%= name %>.rails.*>
  @type slack
  webhook_url <%= webhook_rails %>
  channel rails
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.puma.*>
  @type slack
  webhook_url <%= webhook_puma %>
  channel puma
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.syslog.*>
  @type slack
  webhook_url <%= webhook_syslog %>
  channel syslog
  username <%= name %>
  flush_interval 2s
</match>

<match <%= name %>.error_log.*>
  @type slack
  webhook_url <%= webhook_error_log %>
  channel error_log
  username <%= name %>
  flush_interval 2s
</match>
