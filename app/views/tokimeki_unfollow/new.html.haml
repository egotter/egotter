- title t('.plain_title')
- set_meta_tags description: t('.description')
- set_meta_tags og: {image: 'https://egotter.com/egotter_tokimeki_icon_840x450.png'}

- right_side_options = {header: t('.right_side.header'), subheader: t('.right_side.subheader'), lead: t('.right_side.lead_html'), redirect_path: tokimeki_unfollow_cleanup_path(via: current_via), show_search_form: false}
= render partial: 'shared/side_by_side_section', locals: {right_side: right_side_options}

- if show_redirection_modal?
  = render partial: 'modal/redirection_modal', locals: {title: t('.redirection_modal.title', user: current_user.screen_name), body: t('.redirection_modal.body', user: current_user.screen_name), url: tokimeki_unfollow_cleanup_path(via: current_via('redirection_modal'))}

%h2.h4.text-center.my-5= t('.simple_title')

.container
  .my-5= t('.text002_html')
  .my-5= t('.text003_html')

.tokimeki_unfollow
  .block-center
    %blockquote
      %p.lead= tokimeki_list.sample

= render partial: 'shared/review_section'
= render partial: 'shared/features_section'
= render partial: 'shared/functions_section'
= render partial: 'shared/announcement_section'
