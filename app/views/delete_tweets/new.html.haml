- title t('.meta_title')
- set_meta_tags description: t('.meta_description', count: Rails.configuration.x.constants[:usage_count] / 10000)

- content_for :navbar_title, t('.navbar_title')

- right_side_options = {header: t('.right_side.header'), subheader: t('.right_side.subheader'), lead: t('.right_side.lead_html', count: Rails.configuration.x.constants[:usage_count] / 10000), redirect_path: delete_tweets_mypage_path(via: current_via), show_search_form: false, show_screenshots: false}
= render partial: 'shared/side_by_side_section', locals: {right_side: right_side_options}

= render partial: 'shared/delete_tweets_tweets_section'

.container= render partial: 'faq'

= render partial: 'shared/review_section'

= render partial: 'shared/feature_section', locals: {title: t('shared.features.title1_html'), image: '/egotter_globe_with_text_400x448.png', description: t('shared.features.text1_html', count: Rails.configuration.x.constants[:usage_count] / 10000), note: nil, link: sign_in_with_twitter_link(delete_tweets_path(via: current_via('feature_safe')), 'feature_safe', class: 'btn btn-primary btn-block'), check: t('shared.features.check1')}
= render partial: 'shared/feature_section', locals: {title: t('shared.features.title2_html'), image: '/egotter_trash_with_text_400x448.png', description: t('shared.features.text2_html'), note: t('shared.features.note2'), link: sign_in_with_twitter_link(delete_tweets_path(via: current_via('feature_complete')), 'feature_complete', class: 'btn btn-primary btn-block'), check: t('shared.features.check2')}
= render partial: 'shared/feature_section', locals: {title: t('shared.features.title3_html'), image: '/egotter_clock_with_text_400x448.png', description: t('shared.features.text3_html'), note: nil, link: sign_in_with_twitter_link(delete_tweets_path(via: current_via('feature_progress')), 'feature_progress', class: 'btn btn-primary btn-block'), check: t('shared.features.check3')}
= render partial: 'shared/feature_section', locals: {title: t('shared.features.title4_html'), image: '/egotter_email_with_text_400x448.png', description: t('shared.features.text4_html'), note: t('shared.features.note4'), link: sign_in_with_twitter_link(delete_tweets_path(via: current_via('feature_removed')), 'feature_removed', class: 'btn btn-primary btn-block'), check: t('shared.features.check4')}
= render partial: 'shared/feature_section', locals: {title: t('shared.features.title5_html'), image: '/egotter_chat_with_text_400x448.png', description: t('shared.features.text5_html'), note: nil, link: link_to(t('shared.features.button5'), 'https://twitter.com/ego_tter', target: '_blank', class: 'btn btn-primary btn-block'), check: t('shared.features.check5')}

= render partial: 'shared/functions_section'
= render partial: 'shared/announcements_section'

- if show_redirection_modal?
  - url = sign_in_path(force_login: true, via: current_via('redirection_modal'), redirect_path: delete_tweets_path(via: current_via('redirection_modal')))
  - modal_body = t('.redirection_modal.body_html', user: current_user.screen_name, icon: current_user_icon, url: url)
  = render partial: 'modal/redirection_modal', locals: {title: t('.redirection_modal.title', user: current_user.screen_name), body: modal_body, url: delete_tweets_mypage_path(via: current_via('redirection_modal'))}
