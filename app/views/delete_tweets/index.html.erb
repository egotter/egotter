<% usage_count = Rails.configuration.x.constants[:delete_tweets_count] %>

<% title t('.meta_title') %>
<% set_meta_tags description: t('.meta_description') %>

<% right_side_options = {header: t('.right_side.header'), subheader: t('.right_side.subheader'), lead: t('.right_side.lead_html', count: usage_count / 10000), redirect_path: delete_tweets_mypage_path(via: current_via), show_search_form: false, show_screenshots: false} %>
<%= render partial: 'shared/side_by_side_section', locals: {right_side: right_side_options} %>

<div class="my-5"><%= render partial: 'description' %></div>
<div class="my-5"><%= render partial: 'shared/review_section', locals: {kind: 'delete_tweets', divider: false} %></div>

<% if show_redirection_modal? %>
  <%= render partial: 'modal/redirection_modal', locals: {positive_url: delete_tweets_mypage_path(via: current_via('redirection_modal'))} %>
<% end %>
