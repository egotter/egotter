<% title t('.meta_title') %>
<% set_meta_tags description: t('.meta_description') %>

<% right_side_options = {header: t('.right_side.header'), subheader: t('.right_side.subheader'), lead: t('.right_side.lead_html'), redirect_path: one_sided_friend_path(screen_name: ':screen_name', via: current_via)} %>
<%= render partial: 'shared/side_by_side_section', locals: {right_side: right_side_options} %>
<%= render partial: 'shared/review_section' %>
<%= render partial: 'shared/features_section' %>
<%= render partial: 'shared/functions_section' %>
<%= render partial: 'shared/announcements_section' %>

<% if show_redirection_modal? %>
  <%= render partial: 'modal/redirection_modal', locals: {title: t('.redirection_modal.title', user: current_user.screen_name), body: t('.redirection_modal.body', user: current_user.screen_name), url: one_sided_friend_path(current_user)} %>
<% end %>
