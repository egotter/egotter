<%= javascript_pack_tag 'event_tracker' %>
<script>
  new EventTracker({userId: '<%= current_user&.id %>', deviceType: '<%= request.device_type %>', controllerAction: '<%= controller_name %>#<%= action_name %>', via: '<%= params[:via]&.truncate(200) %>'});
  $(function () {
    $(document).on('click', '.track-twitter-link', function () {
      var eventLocation = $(this).data('location');
      window.trackTwitterLink(eventLocation, 'clicked');
    });
  });
</script>
