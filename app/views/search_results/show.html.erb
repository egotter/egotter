<%
  tu = @searched_tw_user
  rendered_users = []
  icon_limit = request.device_type == :pc ? 8 : 3
%>

<script>
  $(function () {
    window.lazycall_functions = {};
  });
</script>

<% cache "#{tu.cache_key}/close_friends" do %>
  <%= render partial: 'various_users/summary', locals: {name: :close_friends, rendered_users: rendered_users, icon_limit: icon_limit, tu: tu} %>
<% end %>

<% cache "#{tu.cache_key}/usage_stats" do %>
  <%= render partial: 'various_stats/summary', locals: {name: :usage_stats, graph: tu.usage_stats_graph[0], tu: tu} %>
<% end %>

<% cache "#{tu.cache_key}/tweet_clusters" do %>
  <%= render partial: 'various_stats/summary', locals: {name: :clusters_belong_to, graph: tu.clusters_belong_to_frequency_distribution, tu: tu} %>
<% end %>

<% cache "#{tu.cache_key}/various_users/first_half" do %>
  <%= render partial: 'various_users/summary', collection: %i(removing removed new_friends new_followers blocking_or_blocked), as: :name, locals: {rendered_users: rendered_users, icon_limit: icon_limit, tu: tu} %>
<% end %>

<% cache "#{tu.cache_key}/various_users/second_half" do %>
  <%= render partial: 'various_users/summary', collection: %i(mutual_friends one_sided_friends one_sided_followers replying replied favoriting inactive_friends inactive_followers), as: :name, locals: {rendered_users: rendered_users, icon_limit: icon_limit, tu: tu} %>
<% end %>

<%# cache "#{tu.cache_key}/common_friends" do %>
  <%# locals = {uids: modal_rendered_uids, icon_limit: icon_limit, tu: tu} %>
  <%#= render partial: 'common_friends/summary', locals: locals.merge(menu: @menu_common_friends) %>
  <%#= render partial: 'common_friends/summary', locals: locals.merge(menu: @menu_common_followers) %>
<%# end %>

<% cache "#{tu.cache_key}/various_users/rendered_users" do %>
  <%= render(partial: 'profiles/modal', collection: rendered_users.uniq { |user| user.uid.to_i }, as: :user, cached: true, locals: {unique_id: nil, searched_tw_user: tu, via: :profile_modal}) %>
<% end %>

<% cache "#{tu.cache_key}/update_histories" do %>
  <%= render partial: 'update_histories/summary', locals: {histories: UpdateHistories.new(tu.uid), tu: tu} %>
<% end %>

<script>
  $(function () {
    $("img.lazy").lazyload();

    $.each(Object.keys(window.lazycall_functions), function (i, selector) {
      var loaded = false;
      $(selector)
          .lazyload()
          .on('appear', function () {
            if (loaded) return;
            loaded = true;

            window.lazycall_functions[selector]();
          });
    });
  });
</script>

<%= render(partial: 'common/adsense_bottom') %>

<h2 class="h4"><%= t('.about_this_page', this_page: t('searches.show.heading', user: tu.mention_name)) %></h2>
<div class="this-page-is"><%= t('.this_page_is', user: tu.mention_name) %></div>

<h2 class="h4"><%= t('.other_services') %></h2>
<div class="row other-services">
  <div class="text-center col-xs-12 col-sm-4">
    <%= t('search_results.show.twitter_link', screen_name: tu.screen_name).html_safe %>
    <div class="tooltip-container"><abbr title="Twitter" rel="tooltip">i</abbr></div>
  </div>
  <div class="text-center col-xs-12 col-sm-4">
    <%= t('search_results.show.twilog_link', screen_name: tu.screen_name).html_safe %>
    <div class="tooltip-container"><abbr title="Twilog" rel="tooltip">i</abbr></div>
  </div>
  <div class="text-center col-xs-12 col-sm-4">
    <%= t('search_results.show.favstar_link', screen_name: tu.screen_name).html_safe %>
    <div class="tooltip-container"><abbr title="Favstar" rel="tooltip">i</abbr></div>
  </div>
</div>

<script>
  $(function () {
    tooltip();

    var refreshBox = $('.alert.alert-info');
    refreshBox.find('a').on('click', function (e) {
      e.preventDefault();
      e.stopPropagation();

      cache.delete()
          .then(cache.create(), failed)
          .done(function () { window.location.reload() })
          .fail(failed);

      return false;
    });

    var createdAt = <%= tu.created_at.to_i %>;
    var scope = {action: "<%= action_name %>", uid: <%= tu.uid %>};
    var checkLogPath = "<%= background_search_log_path(uid: tu.uid) %>";
    var pageCachePath = "<%= raw page_cache_path(uid: tu.uid, hash: 'HASH') %>";
    var pageCachesPath = "<%= raw page_caches_path(uid: tu.uid) %>";
    waiting2(checkLogPath, pageCachePath, pageCachesPath, createdAt, scope);
  });
</script>
