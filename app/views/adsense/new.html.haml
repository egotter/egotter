      %ins.adsbygoogle{'data-ad-client' => 'ca-pub-3146843071247817', 'data-ad-slot' => right_slot_ad_id, style: 'display:inline-block;width:300px;height:250px'}
      :javascript
        (adsbygoogle = window.adsbygoogle || []).push({});
