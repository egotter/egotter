<div>
  <%= link_to t('.return'), settings_path(via: current_via), class: 'text-body' %>
</div>

<hr>

<div class="row">
  <div class="col-4"><%= t('.screen_name.title') %></div>
  <div class="col-8">
    <%= t('.screen_name.display', name: current_user.screen_name) %>
    <%= link_to sign_in_path(via: current_via('update_profile'), redirect_path: settings_path), class: 'btn btn-outline-primary btn-sm' do %>
      <%= t('.screen_name.update') %>
      <i class="fas fa-sync"></i>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-4"><%= t('.authorized.title') %></div>
  <div class="col-8">
    <% if current_user.authorized? %>
      <%= t('.authorized.true') %>
      <div class="text-muted small"><%= t('.authorized.bonus_html', count: SearchCountLimitation::SIGN_IN_BONUS) %></div>
    <% else %>
      <%= t('.authorized.false') %>
      <div><%= link_to t('.authorized.update'), sign_in_path(via: current_via('update_authorized'), redirect_path: settings_path), class: 'btn btn-danger btn-sm' %></div>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-4"><%= t('.following_egotter.title') %></div>
  <div class="col-8">
    <% if current_user.following_egotter? %>
      <div><%= link_to t('.following_egotter.following'), '#', class: 'update-following btn btn-primary btn-sm disabled', disabled: true %></div>
      <div class="text-muted small mt-1"><%= t('.following_egotter.fast_mode') %></div>
    <% elsif current_user.has_valid_subscription? %>
      <div><%= link_to t('.following_egotter.follow'), '#', data: {url: api_v1_follow_requests_path(via: current_via), uid: User::EGOTTER_UID}, class: 'update-following btn btn-primary btn-sm' %></div>
      <div class="text-muted small mt-1"><%= t('.following_egotter.paid_mode') %></div>
    <% else %>
      <div><%= link_to t('.following_egotter.follow'), '#', data: {url: api_v1_follow_requests_path(via: current_via), uid: User::EGOTTER_UID}, class: 'update-following btn btn-primary btn-sm' %></div>
      <div class="text-muted small mt-1"><%= t('.following_egotter.note_html') %></div>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-4"><%= t('.sharing_egotter.title') %></div>
  <div class="col-8">
    <% if current_user.sharing_count > 0 %>
      <%= t('.sharing_egotter.count', count: current_user.sharing_count) %>
    <% end %>
    <a href="#" data-target="#share-modal" data-toggle="modal" class="btn btn-primary btn-sm"><%= t('.sharing_egotter.see_more') %></a>
    <div class="text-muted small mt-1"><%= t('.sharing_egotter.promotion_html', count: @search_count_limitation.current_sharing_bonus) %></div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-4"><%= t('.swich_account.title') %></div>
  <div class="col-8">
    <%= link_to t('.swich_account.switch'), force_sign_in_path(via: current_via('switch_account'), redirect_path: settings_path), class: 'btn btn-outline-primary btn-sm' %>
    <div class="text-muted small mt-1"><%= t('.swich_account.note_html') %></div>
  </div>
</div>

<script>
  $(function () {
    $('.update-following').on('click', function () {
      var $clicked = $(this);
      new Twitter('settings').follow($clicked.data('uid'));
      return false;
    });
  });
</script>

<div class="row">
  <div class="col-4"><%= t('.search_mode.title') %></div>
  <div class="col-8">
    <% if current_user.search_mode.fast? %>
      <div><%= t(".search_mode.fast") %></div>
      <div class="text-muted small"><%= t('.search_mode.advantage_html') %></div>
    <% else %>
      <div><%= t(".search_mode.#{current_user.search_mode}") %></div>
      <div class="text-muted small"><%= t('.search_mode.advise_html') %></div>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-4">
    <%= check_box_tag :periodic_tweet, true, @create_periodic_tweet_request, {id: 'periodic_tweet', class: 'tgl tgl-ios'} %>
    <label class='tgl-btn' for="periodic_tweet"></label>
  </div>

  <div class="col-8">
    <h6><%= t('.periodic_tweet.title') %></h6>
    <div class="text-muted small"><%= t('.periodic_tweet.off_note_html', count: SearchCountLimitation::PERIODIC_TWEET_BONUS) %></div>
    <div class="text-muted small"><%= t('.periodic_tweet.on_note', min_count: SearchCountLimitation::PERIODIC_TWEET_MIN, max_count: SearchCountLimitation::PERIODIC_TWEET_MAX) %></div>
  </div>
</div>
<script>
  $(function () {
    var url = '<%= api_v1_create_periodic_tweet_requests_path(via: current_via) %>';
    new PeriodicTweetSetting('#periodic_tweet', url);
  });
</script>

<hr>

<div class="row">
  <div class="col-4"><%= t('.search_count.title') %></div>
  <div class="col-8">
    <div>
      <%= t('.search_count.count', count: @search_count_limitation.max_count) %>
      <%= t('.search_count.remaining', count: @search_count_limitation.remaining_count) %>
      <span><a href="#" data-target="#search-modal" data-toggle="modal"><%= t('.search_count.history') %></a></span>
    </div>
    <div class="text-muted small"><%= t('.search_count.note', days: SearchCountLimitation::SEARCH_COUNT_PERIOD / 1.day) %></div>
  </div>
</div>
