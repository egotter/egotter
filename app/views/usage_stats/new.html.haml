- title @title
- set_meta_tags description: t('clusters.new.description')

%h3.h4.clusters.text-center= t('clusters.new.lead_001')
.clusters.lead.text-center= t('clusters.new.lead_002')
.clusters.lead.text-center= t('clusters.new.lead_003_html')

= render partial: 'common/search_form', locals: {via: "#{controller_name}/#{action_name}/top_input"}
= render(partial: 'common/adsense', locals: {action: action_name, vertical: :top})

- if user_signed_in?
  = link_to t('searches.common.search_by', user: current_user.mention_name), searches_path_for(controller: controller_name, screen_name: current_user.screen_name, via: "#{controller_name}/#{action_name}/top_button"), class: 'btn btn-info btn-block', method: :post
- else
  = link_to t('login.welcome.sign_in_with_twitter'), welcome_path(redirect_path: clusters_top_path, via: "#{controller_name}/#{action_name}/button"), class: 'btn btn-info btn-block'

.row.clusters.screenshot
  .col-xs-12.col-sm-6.text-center
    %img{alt: "#{t('searches.common.egotter')}", src: '/screenshot_iphone_332x560.png', height: '160px'}
  .col-xs-12.col-sm-6.text-center
    %img{alt: "#{t('searches.common.egotter')}", src: '/screenshot_laptop_961x560.png', height: '160px'}

.clusters.separator

.twitter.tweets
  = render(partial: 'twitter/tweet', collection: tweets_for('#egotter'), cached: true)
.clusters.lead.in-top-page.text-center= t('clusters.new.lead_004_html')