<% title t('.meta_title') %>
<% set_meta_tags description: t('.meta_description') %>

<h2 class="h4 text-center my-5"><%= t('.page_title') %></h2>

<p class="my-5"><%= t('.page_description') %></p>

<%= alert_box category: 'primary', class: 'my-5' do %>
  <%= t('.login_bug_html', url: '#how-to-fix-platform-bugs') %>
<% end %>

<div class="card">
  <div class="card-body">
    <div>
      <%= link_to '/users/auth/twitter', class: 'btn btn-primary' do %>
        <i class="fab fa-twitter"></i>
        <%= t('.login.title') %>
      <% end %>
    </div>

    <div class="mt-2 mb-5"><%= t('.login.description') %></div>

    <div>
      <%= link_to '/users/auth/twitter?force_login=true', class: 'btn btn-outline-primary' do %>
        <i class="fab fa-twitter"></i>
        <%= t('.force_login.title') %>
      <% end %>
    </div>

    <div class="mt-2"><%= t('.force_login.description') %></div>
  </div>
</div>

<div id="how-to-fix-platform-bugs" style="padding-top: 40px; margin-top: -40px;"></div>
<h3 class="h5 font-weight-bold mt-5 mb-3"><%= t('.how_to_fix_login_bug.title') %></h3>
<p class="my-3"><%= t('.how_to_fix_login_bug.description_html') %></p>

<% if @consecutive_access %>
  <%= modal_dialog id: 'how-to-fix-platform-bugs-modal', title: t('.modal.title'), button: {positive: t('.modal.close'), category: 'outline-secondary'} do %>
    <%= t('.modal.description_html', url: '#how-to-fix-platform-bugs') %>
  <% end %>

  <script>
    $(function () {
      var $modal = $('#how-to-fix-platform-bugs-modal');
      $modal.modal();
      $modal.find('a').on('click', function () {
        $modal.modal('hide');
      });
      $modal.on('hidden.bs.modal', function (e) {
        window.location.href = '#how-to-fix-platform-bugs';
      });
    });
  </script>
<% end %>

<blockquote class="twitter-tweet">
  <a href="https://twitter.com/egotter_cs/status/1623698768356085760?ref_src=twsrc%5Etfw"></a>
</blockquote>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
