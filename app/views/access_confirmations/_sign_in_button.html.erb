<% if user_signed_in? %>
  <%= link_to timeline_path(screen_name: current_user.screen_name, via: current_via('timeline_button')), class: 'btn btn-primary btn-block' do %>
    <img class="rounded" height="20" src="<%= image_path('/logo_transparent_96x96.png') %>">
    <%= t('.timeline_label', user: current_user.screen_name) %>
  <% end %>
<% else %>
  <%= link_to access_confirmations_path(via: current_via('sign_in_button')), class: 'btn btn-primary btn-block' do %>
    <img class="rounded" height="20" src="<%= image_path('/logo_transparent_96x96.png') %>">
    <%= t('.sign_in_label') %>
  <% end %>
<% end %>
