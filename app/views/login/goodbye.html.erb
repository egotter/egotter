<%= image_tag '/egotter_icon_400x400.jpg', style: 'max-width: 350px;', class: 'img-rounded d-block mx-auto my-3' %>

<h2 class="h3 text-center my-5"><%= t('.sign_out') %></h2>

<div class="mb-3"><%= t('.no_tweets') %></div>
<div class="mb-3"><%= t('.advantage_html') %></div>
<div class="mb-3"><%= t('.disadvantage_html') %></div>
<div class="mb-3"><%= t('.realy_sign_out') %></div>

<div class="row text-center my-5">
  <div class="col">
    <%= link_to t('.button.sign_out'), sign_out_path(via: current_via('sign_out')), class: 'btn btn-outline-secondary btn-block', method: :delete %>
  </div>
  <div class="col">
    <%= link_to t('.button.top_page'), root_path(via: current_via('cancel_signing_out')), class: 'btn btn-primary btn-block' %>
  </div>
</div>

<div class="text-muted small mb-3">
  <div class="mb-1"><%= t('.note1') %></div>
  <div><%= t('.note2') %></div>
</div>
