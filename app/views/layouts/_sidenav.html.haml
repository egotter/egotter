%ul.list-group
  - with_options(via: current_via('sidenav')) do |obj|
    %li.list-group-item= link_to t('.statuses'), obj.status_path(twitter_user), id: 'btn-sidenav-statuses'
    %li.list-group-item= link_to t('timelines.feeds.friends.title'), obj.friend_path(twitter_user), id: 'btn-sidenav-friends'
    %li.list-group-item= link_to t('timelines.feeds.followers.title'), obj.follower_path(twitter_user), id: 'btn-sidenav-followers'
    %li.list-group-item= link_to t('timelines.feeds.audience_insights.title'), obj.audience_insight_path(twitter_user), id: 'btn-sidenav-audience-insights'
    %li.list-group-item= link_to t('timelines.feeds.close_friends.title'), obj.close_friend_path(twitter_user), id: 'btn-sidenav-close-friends'
    %li.list-group-item= link_to t('timelines.feeds.usage_stats.title'), obj.usage_stat_path(twitter_user), id: 'btn-sidenav-usage-stats'
    - if show_common_friends?(twitter_user)
      %li.list-group-item= link_to t('timelines.feeds.common_friends.title'), obj.common_friend_path(twitter_user), id: 'btn-sidenav-common-friends.'
      %li.list-group-item= link_to t('timelines.feeds.common_followers.title'), obj.common_follower_path(twitter_user), id: 'btn-sidenav-common-followers'
    %li.list-group-item= link_to t('timelines.feeds.word_clouds.title'), obj.word_cloud_path(twitter_user), id: 'btn-sidenav-word-clouds'
    %li.list-group-item= link_to t('timelines.feeds.clusters.title'), obj.cluster_path(twitter_user), id: 'btn-sidenav-clusters'
    %li.list-group-item= link_to t('timelines.feeds.unfriends.title'), obj.unfriend_path(twitter_user), id: 'btn-sidenav-unfriends'
    %li.list-group-item= link_to t('timelines.feeds.unfollowers.title'), obj.unfollower_path(twitter_user), id: 'btn-sidenav-unfollowers'
    %li.list-group-item= link_to t('timelines.feeds.mutual_unfriends.title'), obj.mutual_unfriend_path(twitter_user), id: 'btn-sidenav-mutual-unfriends'
    %li.list-group-item= link_to t('timelines.feeds.blockers.title'), obj.blockers_path, id: 'btn-sidenav-blockers'
    %li.list-group-item= link_to t('timelines.feeds.mutual_friends.title'), obj.mutual_friend_path(twitter_user), id: 'btn-sidenav-mutual-friends'
    %li.list-group-item= link_to t('timelines.feeds.one_sided_friends.title'), obj.one_sided_friend_path(twitter_user), id: 'btn-sidenav-one-sided-friends'
    %li.list-group-item= link_to t('timelines.feeds.one_sided_followers.title'), obj.one_sided_follower_path(twitter_user), id: 'btn-sidenav-one-sided-followers'
    %li.list-group-item= link_to t('timelines.feeds.replying.title'), obj.replying_path(twitter_user), id: 'btn-sidenav-replying'
    %li.list-group-item= link_to t('timelines.feeds.replied.title'), obj.replied_path(twitter_user), id: 'btn-sidenav-replied'
    %li.list-group-item= link_to t('timelines.feeds.favorite_friends.title'), obj.favorite_friend_path(twitter_user), id: 'btn-sidenav-favorite-friends'
    %li.list-group-item= link_to t('timelines.feeds.inactive_friends.title'), obj.inactive_friend_path(twitter_user), id: 'btn-sidenav-inactive-friends'
    %li.list-group-item= link_to t('timelines.feeds.inactive_followers.title'), obj.inactive_follower_path(twitter_user), id: 'btn-sidenav-inactive-followers'
    %li.list-group-item= link_to t('timelines.feeds.personality_insights.title'), obj.personality_insight_path(twitter_user), id: 'btn-sidenav-personality-insights'
    %li.list-group-item= link_to t('timelines.feeds.delete_tweets.title'), obj.delete_tweets_path, id: 'btn-sidenav-delete-tweets'
