%ul.list-group
  - with_options(via: current_via('sidenav')) do |obj|
    %li#btn-sidenav-statuses.list-group-item= link_to t('.statuses'), obj.status_path(twitter_user)
    %li#btn-sidenav-friends.list-group-item= link_to t('timelines.feeds.friends.title'), obj.friend_path(twitter_user)
    %li#btn-sidenav-followers.list-group-item= link_to t('timelines.feeds.followers.title'), obj.follower_path(twitter_user)
    %li#btn-sidenav-audience-insights.list-group-item= link_to t('timelines.feeds.audience_insights.title'), obj.audience_insight_path(twitter_user)
    %li#btn-sidenav-close-friends.list-group-item= link_to t('timelines.feeds.close_friends.title'), obj.close_friend_path(twitter_user)
    %li#btn-sidenav-usage-stats.list-group-item= link_to t('timelines.feeds.usage_stats.title'), obj.usage_stat_path(twitter_user)
    - if show_common_friends?(twitter_user)
      %li#btn-sidenav-common-friends.list-group-item= link_to t('timelines.feeds.common_friends.title'), obj.common_friend_path(twitter_user)
      %li#btn-sidenav-common-followers.list-group-item= link_to t('timelines.feeds.common_followers.title'), obj.common_follower_path(twitter_user)
    %li#btn-sidenav-word-clouds.list-group-item= link_to t('timelines.feeds.word_clouds.title'), obj.word_cloud_path(twitter_user)
    %li#btn-sidenav-clusters.list-group-item= link_to t('timelines.feeds.clusters.title'), obj.cluster_path(twitter_user)
    %li#btn-sidenav-unfriends.list-group-item= link_to t('timelines.feeds.unfriends.title'), obj.unfriend_path(twitter_user)
    %li#btn-sidenav-unfollowers.list-group-item= link_to t('timelines.feeds.unfollowers.title'), obj.unfollower_path(twitter_user)
    %li#btn-sidenav-mutual-unfriends.list-group-item= link_to t('timelines.feeds.mutual_unfriends.title'), obj.mutual_unfriend_path(twitter_user)
    %li#btn-sidenav-mutual-friends.list-group-item= link_to t('timelines.feeds.mutual_friends.title'), obj.mutual_friend_path(twitter_user)
    %li#btn-sidenav-one-sided-friends.list-group-item= link_to t('timelines.feeds.one_sided_friends.title'), obj.one_sided_friend_path(twitter_user)
    %li#btn-sidenav-one-sided-followers.list-group-item= link_to t('timelines.feeds.one_sided_followers.title'), obj.one_sided_follower_path(twitter_user)
    %li#btn-sidenav-replying.list-group-item= link_to t('timelines.feeds.replying.title'), obj.replying_path(twitter_user)
    %li#btn-sidenav-replied.list-group-item= link_to t('timelines.feeds.replied.title'), obj.replied_path(twitter_user)
    %li#btn-sidenav-favorite-friends.list-group-item= link_to t('timelines.feeds.favorite_friends.title'), obj.favorite_friend_path(twitter_user)
    %li#btn-sidenav-inactive-friends.list-group-item= link_to t('timelines.feeds.inactive_friends.title'), obj.inactive_friend_path(twitter_user)
    %li#btn-sidenav-inactive-followers.list-group-item= link_to t('timelines.feeds.inactive_followers.title'), obj.inactive_follower_path(twitter_user)
    %li#btn-sidenav-personality-insights.list-group-item= link_to t('timelines.feeds.personality_insights.title'), obj.personality_insight_path(twitter_user)
    %li#btn-sidenav-delete-tweets.list-group-item= link_to t('timelines.feeds.delete_tweets.title'), obj.delete_tweets_path
    %li#btn-sidenav-scheduled-tweets.list-group-item= link_to t('timelines.feeds.scheduled_tweets.title'), scheduled_tweets_url(via: current_via('sidenav'))
