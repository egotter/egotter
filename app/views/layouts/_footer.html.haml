        %a{href: "https://scheduled-tweets.egotter.com?via=egotter_footer&utm_source=egotter-footer&utm_medium=web&utm_campaign=egotter", target: '_blank'}= t('.scheduled_tweets')
      = footer_item do
        %a{href: "https://transcription-ai.com?via=egotter_footer&utm_source=egotter-footer&utm_medium=web&utm_campaign=egotter", target: '_blank'}= t('.transcription')
      = footer_item do
        - if user_signed_in?
          = link_to t('.sign_out'), goodbye_path(via: current_via('footer'))
        - else
          = link_to t('.sign_in'), sign_in_path(via: current_via('footer'))
      = footer_item do
        %a{href: 'https://twitter.com/ego_tter', target: '_blank'}= t('.feedback')
      - if user_signed_in?
        = footer_item do
          = link_to t('settings.title'), settings_path
      = footer_item do
        %a{href: user_url('ego_tter'), target: '_blank'}= t('.official_account')
      = footer_item do
        = link_to t('.support'), support_path
      = footer_item do
        %a{href: 'https://github.com/ts-3156/egotter', target: '_blank'}= t('.github')
      = footer_item do
        = link_to t('misc.terms_of_service.title'), terms_of_service_path
      = footer_item do
        = link_to t('misc.privacy_policy.title'), privacy_policy_path
      = footer_item do
        = link_to t('misc.specified_commercial_transactions.title'), specified_commercial_transactions_path
      = footer_item do
        = link_to t('misc.specified_commercial_transactions.title'), specified_commercial_transactions_path
      = footer_item do
        = link_to t('pricing.new.plans'), pricing_path(via: current_via('footer'))
      = footer_item do
        = link_to t('directory.profiles.footer_title'), directory_profile_path
      = footer_item do
        = link_to t('directory.timelines.footer_title'), directory_timeline_path

    %div
      %a{href: 'https://play.google.com/store/apps/details?id=com.egotter&pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1', target: '_blank'}
