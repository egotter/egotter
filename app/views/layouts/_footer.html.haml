%footer.footer
  .container
    - spaces = '&nbsp;'.html_safe

    = succeed spaces do
      %a{href: root_path}= t('searches.common.top_page')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'one_sided_friends')}= t('one_sided_friends.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'unfriends')}= t('unfriends.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'relationships')}= t('relationships.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'inactive_friends')}= t('inactive_friends.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'conversations')}= t('conversations.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'clusters')}= t('clusters.new.simple_title')
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: 'usage_stats')}= t('usage_stats.new.simple_title')
      %br

    = succeed spaces do
      - if user_signed_in?
        = link_to t('dictionary.sign_out'), '#', data: {toggle: 'modal', target: '.sign-out-modal'}
        .modal.fade.sign-out-modal.text-center{"aria-labelledby" => 'sign-out-modal-label', role: 'dialog', tabindex: '-1'}
          .modal-dialog{role: 'document'}
            .modal-content
              .modal-header
                %button.close{"aria-label" => 'Close', "data-dismiss" => 'modal', type: 'button'}
                  %span{"aria-hidden" => 'true'} Ã—
                %h4#sign-out-modal-label.modal-title= t('dictionary.sign_out')
              .modal-body{style: 'padding: 15px 0 0 0; line-height: 160%;'}
                = t('dictionary.realy_sign_out_html')
                %div{style: 'margin: 15px;'}
                  = link_to t('dictionary.do_sign_out'), sign_out_path, class: 'btn btn-info btn-block'
                = image_tag '/egotter_icon_400x400.jpg', class: "#{'img-responsive' if request.from_smartphone?}", style: 'margin-bottom: 15px;'
      - else
        = link_to t('dictionary.sign_in'), welcome_path(via: "#{controller_name}/#{action_name}/footer")
      %br.visible-xs-block

    = succeed spaces do
      %a{href: root_path_for(controller: controller_name)}= t('searches.common.feedback')
      %br.visible-xs-block

    - if user_signed_in?
      = succeed spaces do
        = link_to t('misc.menu.title'), menu_path
        %br.visible-xs-block

    = succeed spaces do
      %a{href: user_url('ego_tter'), target: '_blank'}= t('dictionary.official_account')
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('searches.common.support'), support_path
      %br.visible-xs-block

    = succeed spaces do
      %a{href: 'https://github.com/ts-3156/egotter', target: '_blank'}= t('searches.common.github')
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('misc.terms_of_service.title'), terms_of_service_path
      %br.visible-xs-block

    = succeed spaces do
      = link_to t('misc.privacy_policy.title'), privacy_policy_path
      %br.visible-xs-block