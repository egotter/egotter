<% if sign_in_as_confirmation_user? %>
  <%= link_to timeline_path, class: 'btn btn-primary btn-block' do %>
    <img class="rounded" height="20" src="<%= image_path('/logo_transparent_96x96.png') %>">
    <%= t('.timeline', user: current_user.screen_name) %>
  <% end %>
<% else %>
  <%= link_to sign_in_path, class: 'btn btn-primary btn-block' do %>
    <img class="rounded" height="20" src="<%= image_path('/logo_transparent_96x96.png') %>">
    <%= t('.sign_in') %>
  <% end %>
<% end %>
